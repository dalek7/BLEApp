<Page
    x:Class="BLEDev.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BLEDev"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="startWatcherButton" Content="Start" HorizontalAlignment="Left" Margin="105,189,0,0" VerticalAlignment="Top" Click="startWatcherButton_Click"/>
        <Button x:Name="stopWatcherButton" Content="Stop" HorizontalAlignment="Left" Margin="213,189,0,0" VerticalAlignment="Top" Click="stopWatcherButton_Click"/>
        <ComboBox x:Name="selectorComboBox" HorizontalAlignment="Left" Margin="105,301,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Page>
